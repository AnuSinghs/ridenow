<div class="card-group">
  <div class="col-xl-12">
      <h3>Our Popular Routes<small><em><%= link_to "(see all)", journeys_path %></em></small></h3>
  </div>

    <!-- LIST ALL PUBLIC ROUTES - PRIVACY FALSE -->
 <div class="container-landing">
    <% @journeys.where(privacy: false).limit(10).each do |journey| %>
      <div class="card-landing">
        <img class="card-img-landing" src="<%=journey.route_url%>">
           <div class="card-avatar-landing">
              <% user = User.find(journey.user_id)%>
              <%= render "shared/user-avatar", user: user %>
            </div>
            <h6 class="card-title-landing">
              <%= link_to "#{journey.name}", journey %>
            </h6>
            <div class="card-body-landing">
              <small>From: <%= journey.origin %> </small>
              <small>To: <%= journey.destination %></small>
            </div>
          <div class="btn btn-success"><%= link_to "see route", journey %></div>
      </div>
    <% end %>
  </div>
</div>
