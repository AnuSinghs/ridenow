<div class="card-group">
  <div class="col-xl-12">
      <h3>Our Popular Routes
        <small><em><%= link_to "(see all)", journeys_path %></em></small>
      </h3>
  </div>

    <!-- LIST ALL PUBLIC ROUTES - PRIVACY FALSE -->

    <% @journeys.where(privacy: false).limit(10).each do |listing| %>

    <div class="col-lg-2">
      <div class="card-landing">
        <img class="card-img-landing" src="<%=listing.route_url%>">
          <h6 class="card-title">
            <%= link_to "#{listing.name}", "/journeys/#{listing.id}}" %>
          </h6>
            <small>From: <%= listing.origin %> </small>
            <small>To: <%= listing.destination %></small>
          <div class="card-avatar">
            <% user = User.find(listing.user_id)%>
            <%= render "shared/user-avatar", user: user %>
          </div>
          <div class="btn btn-success"><%= link_to "see route", "/journeys/#{listing.id}}" %></div>
      </div>
    </div>
    <% end %>
  </div>
