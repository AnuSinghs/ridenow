
<div class="row">

  <!--  LEFT PANEL-TOP ROW: EATS/SIGHTS SELECTED -->

  <!-- PAGE TITLE -->

  <div class="col-lg-4">
    <div class="row">
      <div class="col-lg-12">
        <h3 style="margin-top: 20px; margin-bottom: 20px">Your Itinerary</h3>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <h5 style="margin-top: 10px; padding: 15px"><%= @journey.name  %></h5>
        </div>
      </div>

    </div>

    <div class="row">

      <!-- EATS PANEL (LEFT) -->

      <div class="col-lg-6">

        <!-- EATS TITLE -->

        <div class="row">
          <div class="col-lg-12">
            <h6>Eats</h6>
          </div>
        </div>

        <!-- EATS LISTING SELECTED -->

        <div class="row">
          <div class="col-lg-12">
            <% @journey.listings.where(category_id: 2).each do |listing| %>
            <%= listing.name %>
            <% end %>

          </div>
        </div>
      </div>

      <!-- SIGHTS PANEL (RIGHT) -->

      <div class="col-lg-6">

       <!-- SIGHTS TITLE -->

       <div class="row">
        <div class="col-lg-12">
          <h6>Sights</h6>
        </div>
      </div>

      <!-- SIGHTS LISTING SELECTED -->

      <div class="row">
        <div class="col-lg-12">
          <% @journey.listings.where(category_id: 1).each do |listing| %>
          <%= listing.name %>

          <% end %>
        </div>
      </div>

    </div>
  </div>

  <!-- LINK BACK TO LISTING -->

 <% if policy(@journey).update? %>
  <div class="row">
    <div class="col-lg-12" style="text-align: right; margin-top: 40px">
      <%= link_to "Edit Journey", edit_journey_path(@journey)%>
    </div>
  </div>
  <% end %>


  <!-- NEXT STEP/OUTPUT OPTIONS -->

  <div class="row">
    <div class="col-lg-12">

      <div class="box" style="margin-top:80px">


        <!-- EMAIL - INACTIVE BUTTON -->

        <div class="btn btn-success">
          Send to Email
        </div>

        <!-- INVITE FRIENDS - INACTIVE BUTTON -->

        <div class="btn btn-success">
          Invite Friends
        </div>

        <!-- SHARE TO FACEBOOK -->
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v10.0" nonce="NXLjCoj3"></script>
        <div class="fb-share-button" style="margin-top: 10px" data-href="https://ridenowrightnow.herokuapp.com/" data-layout="button" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fridenowrightnow.herokuapp.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>

      </div>

    </div>
  </div>
</div>

<!-- RIGHT PANEL - MAP W/ ROUTE -->

<div class="col-lg-8">

  <div class="mapbox">
    <div id="map-journey"
      style="width: 100%; height: 800px; position:sticky"
      data-start="<%= @start.to_json %>"
      data-end="<%= @end.to_json %>"
      data-fitpoints="<%= @fit_points.to_json %>"
      data-listingmarkers="<%= @listing_markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div id="instructions"></div>
  </div>

</div>

</div>


