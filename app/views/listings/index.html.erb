  <div class="container">
     <div class="row">
    <div class="col-sm-12">
   <% if @listings.count == 0 %>
   <div class="col-sm-12" style="display: block; color: grey; text-align: center; padding: 100px">
    <h5>No listings available</h5>
    <h5>Try again!</h5>
  </div>
  <%else%>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards">
    <% @listings.sample(5).each do |listing| %>
        <div class="col-sm-5">
          <small>Order by: <%= listing.name %></small>
        </div>
      </div>
      <% if listing.photo.attached? %>
        <img class="card-img-top" src="https://res.cloudinary.com/dcm2heeuf/image/upload/v1620723373/<%=listing.photo.key %>" href="/listing">
      <% else %>
        <img class="card-img-top" src="https://source.unsplash.com/400x300/?vegetables" />
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><strong><%= listing.name %></strong></h5>
        <p class="card-text">
          <span class="row">
            <span class="col-sm-8">
              <%= listing.categories %>
            </span>
            <span class="col-sm-4">
              <strong>$<%= listing.description %> each</strong>
            </span>
          </span>
          <p><small><%= listing.address %></small></p>
        </p>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>

